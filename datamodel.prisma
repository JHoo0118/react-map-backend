type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  picture: String @default(
    value: "https://cdn0.iconfinder.com/data/icons/superuser-web-kit/512/686909-user_people_man_human_head_person-512.png"
  )
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Pin {
  id: ID! @id
  title: String!
  content: String!
  image: String!
  latitude: Int
  longitude: Int
  author: User!
  comments: [Comment!]!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Comment {
  id: ID! @id
  text: String!
  author: User!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}